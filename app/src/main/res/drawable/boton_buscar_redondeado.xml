<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_secondary_pressed" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="@color/color_secondary_outline" />
            <padding
                android:left="22dp"
                android:top="12dp"
                android:right="22dp"
                android:bottom="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_secondary" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="@color/color_secondary_outline" />
            <padding
                android:left="22dp"
                android:top="12dp"
                android:right="22dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>
