<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splashRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#072740">  <!-- Azul oscuro dominante -->

    <!-- Burbujas flotantes (simulan lava). Son simples Views circulares -->
    <View
        android:id="@+id/bubble1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/bubble_circle_orange" />

    <View
        android:id="@+id/bubble2"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="28dp"
        android:background="@drawable/bubble_circle_blue" />

    <View
        android:id="@+id/bubble3"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/bubble_circle_brown" />

    <!-- Contenedor superior tipo Grid redondeado (ya tienes rounded_grid.xml) -->
    <LinearLayout
        android:id="@+id/splashGrid"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_gravity="top"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="36dp"
        android:padding="14dp"
        android:background="@drawable/rounded_grid"
        android:orientation="vertical">

        <!-- Card pequeña que “sale” dentro del grid y contiene el logo -->
        <LinearLayout
            android:id="@+id/logoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_item_redondeado_oscuro"
            android:backgroundTint="#030C20"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="18dp">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logoprincipal" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
