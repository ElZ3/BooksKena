<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contacto_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#011724"
    android:padding="16dp"
    tools:context=".ContactoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- LOGO + INFO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/imgLogoContacto"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/logoapp"
                android:background="@drawable/rounded_grid"
                android:padding="12dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/txtNombreApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Books Kena"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_alternates_bold_italic" />

            <!-- Datos de contacto -->
            <TextView
                android:id="@+id/txtTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Teléfono: +503 7000-0000"
                android:textColor="#F8F5E6"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicación: Santa Elena, Antiguo Cuscatlán, San Salvador"
                android:textColor="#F8F5E6"
                android:textSize="14sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/txtCEO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEO: Fabio J. De la Cruz"
                android:textColor="#C76423"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- CARD DEL FORMULARIO -->
        <LinearLayout
            android:id="@+id/cardFormulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_grid"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/txtTituloFormulario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ponte en contacto con nosotros"
                android:textColor="#011724"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/edtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_xorner"
                android:hint="Tu nombre"
                android:padding="14dp"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textSize="15sp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/edtCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_xorner"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textSize="15sp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/edtAsunto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_xorner"
                android:hint="Asunto"
                android:padding="14dp"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textSize="15sp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/edtMensaje"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/rounded_xorner"
                android:hint="Escribe tu mensaje..."
                android:gravity="top|start"
                android:padding="14dp"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textSize="15sp"
                android:inputType="textMultiLine"
                android:maxLines="6"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_agregar_redondeado"
                android:text="Enviar mensaje"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="12dp" />

            <TextView
                android:id="@+id/txtNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tu mensaje será enviado por correo electrónico."
                android:textColor="#555555"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
