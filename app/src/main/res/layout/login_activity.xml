<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="#072740">   <!-- FONDO AZUL OSCURO -->

    <Space
        android:layout_width="match_parent"
        android:layout_height="57dp" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutLogin"
        android:layout_width="match_parent"
        android:layout_height="678dp"
        android:background="@drawable/rounded_grid"
        android:backgroundTint="#F8F5E6"
        android:padding="12dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="203dp"
        app:srcCompat="@drawable/loginbook" />

    <EditText
        android:id="@+id/username_input"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_xorner"
        android:hint="Username"
        android:inputType="text"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_column="0"
        app:layout_row="1" />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_xorner"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_column="0"
        app:layout_row="2" />

        <CheckBox
            android:id="@+id/checPassword"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="12dp"
            android:padding="5dp"
            android:text="Â¿Remember password?"
            app:layout_column="0"
            app:layout_row="3" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/boton_agregar_redondeado"
        android:text="Login"
        android:textColor="#F8F5E6"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="4" />

    <TextView
        android:id="@+id/socialTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="15dp"
        android:text="Social Login"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_column="0"
        app:layout_row="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_column="0"
        app:layout_row="6">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/logogoogle" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/logofacebook" />
    </LinearLayout>

</androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
