<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#072740"
    tools:context=".MainActivity">

    <!-- Contenedor principal flotante -->
    <LinearLayout
        android:id="@+id/gridContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="36dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_grid"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="339dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/logosecundario" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Bienvenido a Books Kena"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:fontFamily="@font/montserrat_alternates_bold_italic"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/mandali"
            android:text="Lugar donde la imaginación vuela y las ideas son expresadas en versos profundos. Inicia ahora con Books Kena y lee las historias más intrigantes y los poemas más profundos del amor eterno."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/iniciarnbtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/boton_pie_redondeado"
            android:text="Inicia Ahora"
            android:textSize="18sp"
            android:textColor="#F8F5E6" />
    </LinearLayout>

</LinearLayout>
