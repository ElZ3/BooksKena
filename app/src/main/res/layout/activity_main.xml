<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="653dp"
        android:background="@drawable/rounded_grid"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="263dp"
            app:srcCompat="@drawable/loginbook" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:fontFamily="@font/montserrat_alternates_bold_italic"
            android:text="Bienvenido a Books Kena"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:fontFamily="@font/mandali"
            android:layout_marginTop="12dp"
            android:text="Lugar donde la imaginacion vuela y las ideas son expresadas en versos profundos. Inicia ahora con Books Kena y lee las historias mas intrigantres y los poemas mas profundos del amor eterno"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/iniciarnbtn"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#D78180"
            android:padding="15dp"
            android:text="Inicia Ahora"
            android:textSize="20dp"
            app:layout_column="0"
            app:layout_row="4" />
    </LinearLayout>
</LinearLayout>