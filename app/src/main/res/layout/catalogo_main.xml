<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/catalogo_libros_principal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#011724">

    <!-- Header con Logo y Contacto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#011724"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Logo App -->
        <ImageView
            android:id="@+id/logo_app"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logoapp"
            android:scaleType="centerCrop"
            android:background="#002C45"
            android:padding="8dp" />

        <!-- Espacio flexible -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Contacto Creador -->
        <ImageView
            android:id="@+id/contacto_creador"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/usuario"
            android:scaleType="centerCrop"
            android:background="#002C45"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Barra de Búsqueda -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#011724"
        android:padding="16dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/campo_buscar_libros"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="#002C45"
            android:hint="Buscar libro..."
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#C8C8C8"
            android:textSize="16sp"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/boton_buscar"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_marginStart="12dp"
            android:background="#753C28"
            android:text="Buscar"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- Categorías -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#011724"
        android:paddingVertical="8dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingHorizontal="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/boton_ficcion"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:background="#753C28"
                    android:text="Ficción"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <Button
                    android:id="@+id/boton_poesia"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:background="#753C28"
                    android:text="Poesía"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <Button
                    android:id="@+id/boton_misterio"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:background="#753C28"
                    android:gravity="center"
                    android:text="Misterio"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/boton_romance"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:background="#753C28"
                    android:text="Romance"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <Button
                    android:id="@+id/boton_biografias"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:background="#753C28"
                    android:text="Biografías"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Lista de Libros -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#002434"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Libro 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="8dp"
                android:background="#002C45"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imagen_libro_1"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/libro1"
                    tools:srcCompat="@drawable/libro1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/titulo_libro_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Las Aventuras de Nico y Nacho"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/autor_libro_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pablo Herrera R."
                        android:textColor="#C8C8C8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/precio_libro_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="$18.99"
                        android:textColor="#C76423"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="16dp">

                        <Button
                            android:id="@+id/boton_agregar_libro_1"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:background="#753C28"
                            android:text="Agregar"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/boton_ver_detalles_libro_1"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="#C76423"
                            android:text="Detalles"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Libro 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="8dp"
                android:background="#002C45"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imagen_libro_2"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/libro2"
                    tools:srcCompat="@drawable/libro2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/titulo_libro_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Visions Of Tomorrow"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/autor_libro_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Leo Waen"
                        android:textColor="#C8C8C8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/precio_libro_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="$22.50"
                        android:textColor="#C76423"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="16dp">

                        <Button
                            android:id="@+id/boton_agregar_libro_2"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:background="#753C28"
                            android:text="Agregar"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/boton_ver_detalles_libro_2"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="#C76423"
                            android:text="Detalles"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Libro 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="8dp"
                android:background="#002C45"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imagen_libro_3"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/libro3"
                    tools:srcCompat="@drawable/libro3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/titulo_libro_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="El Reto"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/autor_libro_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Maria Serrano Burgos y David Sierra Liston"
                        android:textColor="#C8C8C8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/precio_libro_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="$19.99"
                        android:textColor="#C76423"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="16dp">

                        <Button
                            android:id="@+id/boton_agregar_libro_3"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:background="#753C28"
                            android:text="Agregar"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/boton_ver_detalles_libro_3"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="#C76423"
                            android:text="Detalles"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Libro 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="8dp"
                android:background="#002C45"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imagen_libro_4"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/libro4"
                    tools:srcCompat="@drawable/libro4" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/titulo_libro_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dracula"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/autor_libro_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bram Stoker"
                        android:textColor="#C8C8C8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/precio_libro_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="$19.99"
                        android:textColor="#C76423"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="16dp">

                        <Button
                            android:id="@+id/boton_agregar_libro_4"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:background="#753C28"
                            android:text="Agregar"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/boton_ver_detalles_libro_4"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="#C76423"
                            android:text="Detalles"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Pie de página -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#011724"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/boton_ver_carrito"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="#753C28"
            android:text="Ver Carrito"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <Button
            android:id="@+id/boton_volver_inicio"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="#753C28"
            android:text="Volver al Inicio"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>