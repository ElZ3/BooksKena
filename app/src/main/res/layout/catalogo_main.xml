<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/catalogo_libros_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#011724">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/section_header"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#011724"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/logo_app"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/logoprincipal_icon"
            android:background="#002C45"
            android:padding="6dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_contact"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Contactos"
            android:src="@drawable/usuario" />
    </LinearLayout>

    <!-- SEARCH -->
    <LinearLayout
        android:id="@+id/section_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#072E4A"
        android:padding="12dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/campo_buscar_libros"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/fondo_busqueda_redondeado"
            android:hint="Buscar libro por título"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#C8C8C8"
            android:textSize="15sp"
            android:gravity="center_vertical" />

        <ImageButton
            android:id="@+id/boton_buscar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/boton_buscar_redondeado"
            android:contentDescription="Buscar"
            android:src="@drawable/icon_search" />
    </LinearLayout>

    <!-- CATEGORIES -->
    <LinearLayout
        android:id="@+id/section_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0B3A5E"
        android:paddingVertical="8dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingHorizontal="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/boton_ficcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:paddingHorizontal="14dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/boton_categoria_redondeado"
                    android:text="Ficción"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:contentDescription="@string/desc_category_ficcion"/>

                <Button
                    android:id="@+id/boton_poesia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:paddingHorizontal="14dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/boton_categoria_redondeado"
                    android:text="Poesia"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:contentDescription="@string/desc_category_poesia"/>

                <Button
                    android:id="@+id/boton_misterio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:paddingHorizontal="14dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/boton_categoria_redondeado"
                    android:text="Misterio"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:contentDescription="@string/desc_category_misterio" />

                <Button
                    android:id="@+id/boton_romance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:paddingHorizontal="14dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/boton_categoria_redondeado"
                    android:text="Romance"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:contentDescription="@string/desc_category_romance" />

                <Button
                    android:id="@+id/boton_biografias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:paddingHorizontal="14dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/boton_categoria_redondeado"
                    android:text="Biografias"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:contentDescription="@string/desc_category_biografias" />

                <Button
                    android:id="@+id/boton_clear_filters"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/boton_detalles_redondeado"
                    android:text="Quitar filtros"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- LISTA -->
    <ScrollView
        android:id="@+id/section_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0E456E"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD 1 -->
            <LinearLayout
                android:id="@+id/card_libro_1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="8dp"
                android:background="@drawable/fondo_item_redondeado_oscuro"
                android:orientation="horizontal"
                android:padding="14dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/libro1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="14dp">

                    <TextView
                        android:id="@+id/titulo_libro_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Las Aventuras de Nico y Nacho"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pablo Herrera R."
                        android:textColor="#C8C8C8"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:text="$18.99"
                        android:textColor="#E87722"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <ImageButton
                            android:id="@+id/boton_agregar_libro_1"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="#16181F"
                            android:contentDescription="@string/desc_add_cart"
                            android:minWidth="48dp"
                            android:padding="0dp"
                            android:src="@drawable/icon_addcart"
                            android:tooltipText="@string/desc_add_cart" />


                        <ImageButton
                            android:id="@+id/boton_ver_detalles_libro_1"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:minWidth="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_icon_button_round"
                            android:padding="0dp"
                            android:src="@drawable/icon_view"
                            android:contentDescription="@string/desc_view_details"
                            android:tooltipText="@string/desc_view_details"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- CARD 2 -->
            <LinearLayout
                android:id="@+id/card_libro_2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="8dp"
                android:background="@drawable/fondo_item_redondeado_oscuro"
                android:orientation="horizontal"
                android:padding="14dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/libro2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="14dp">

                    <TextView
                        android:id="@+id/titulo_libro_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Visions Of Tomorrow"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Leo Waen"
                        android:textColor="#C8C8C8"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:text="$22.50"
                        android:textColor="#E87722"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <ImageButton
                            android:id="@+id/boton_agregar_libro_2"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:minWidth="48dp"
                            android:layout_weight="1"
                            android:padding="0dp"
                            android:background="@drawable/bg_icon_button_round"
                            android:src="@drawable/icon_addcart"
                            android:contentDescription="@string/desc_add_cart"
                            android:tooltipText="@string/desc_add_cart"/>


                        <ImageButton
                            android:id="@+id/boton_ver_detalles_libro_2"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:minWidth="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_icon_button_round"
                            android:padding="0dp"
                            android:src="@drawable/icon_view"
                            android:contentDescription="@string/desc_view_details"
                            android:tooltipText="@string/desc_view_details"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- CARD 3 -->
            <LinearLayout
                android:id="@+id/card_libro_3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="8dp"
                android:background="@drawable/fondo_item_redondeado_oscuro"
                android:orientation="horizontal"
                android:padding="14dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/libro3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="14dp">

                    <TextView
                        android:id="@+id/titulo_libro_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="El Reto"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Maria S. Burgos y David S. Liston"
                        android:textColor="#C8C8C8"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:text="$19.99"
                        android:textColor="#E87722"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <ImageButton
                            android:id="@+id/boton_agregar_libro_3"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/icon_addcart" />

                        <ImageButton
                            android:id="@+id/boton_ver_detalles_libro_3"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/icon_view" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- CARD 4 -->
            <LinearLayout
                android:id="@+id/card_libro_4"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="8dp"
                android:background="@drawable/fondo_item_redondeado_oscuro"
                android:orientation="horizontal"
                android:padding="14dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/libro4" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="14dp">

                    <TextView
                        android:id="@+id/titulo_libro_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Drácula"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bram Stoker"
                        android:textColor="#C8C8C8"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:text="$19.99"
                        android:textColor="#E87722"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <ImageButton
                            android:id="@+id/boton_agregar_libro_4"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/icon_addcart" />

                        <ImageButton
                            android:id="@+id/boton_ver_detalles_libro_4"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/icon_view" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- EMPTY STATE -->
            <TextView
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:gravity="center"
                android:text="Producto no encontrado"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <!-- FOOTER -->
    <LinearLayout
        android:id="@+id/section_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#011724"
        android:orientation="horizontal"
        android:padding="12dp">

        <Button
            android:id="@+id/boton_ver_carrito"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:background="@drawable/boton_pie_redondeado"
            android:text="Ver Carrito"
            android:textColor="#F8F5E6" />

        <Button
            android:id="@+id/boton_volver_inicio"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:background="@drawable/boton_pie_redondeado"
            android:text="Volver al Inicio"
            android:textColor="#F8F5E6" />
    </LinearLayout>
</LinearLayout>
