<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/catalogo_libros_principal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#202124">

    <!-- Cabecera -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#202124"
        android:padding="20dp">

        <TextView
            android:id="@+id/titulo_bienvenida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bienvenido a nuestra biblioteca"
            android:textColor="#E8DFD5"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="12dp" />

        <TextView
            android:id="@+id/subtitulo_bienvenida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Descubre historias que te llenen de intriga o te sorprendan con sus versos"
            android:textColor="#DBBBA7"
            android:textSize="14sp"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="16dp">

            <EditText
                android:id="@+id/campo_buscar_libros"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="@drawable/fondo_busqueda_redondeado"
                android:hint="Buscar libro..."
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="#E8DFD5"
                android:textColorHint="#DBBBA7"
                android:textSize="16sp" />

            <Button
                android:id="@+id/boton_buscar"
                android:layout_width="120dp"
                android:layout_height="52dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/boton_buscar_redondeado"
                android:text="Buscar"
                android:textColor="#202124"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="0dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Categorías -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#3B4883"
        android:paddingVertical="8dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingHorizontal="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/boton_ficcion"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/boton_categoria_redondeado"
                    android:text="Ficción"
                    android:textAllCaps="false"
                    android:textColor="#202124"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="0dp" />

                <Button
                    android:id="@+id/boton_poesia"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/boton_categoria_redondeado"
                    android:text="Poesía"
                    android:textAllCaps="false"
                    android:textColor="#202124"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="0dp" />

                <Button
                    android:id="@+id/boton_misterio"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/boton_categoria_redondeado"
                    android:text="Misterio"
                    android:textAllCaps="false"
                    android:textColor="#202124"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="0dp" />

                <Button
                    android:id="@+id/boton_romance"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/boton_categoria_redondeado"
                    android:text="Romance"
                    android:textAllCaps="false"
                    android:textColor="#202124"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="0dp" />

                <Button
                    android:id="@+id/boton_biografias"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/boton_categoria_redondeado"
                    android:text="Biografías"
                    android:textAllCaps="false"
                    android:textColor="#202124"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="0dp" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Lista de Libros -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#202124"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Libro 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:background="@drawable/fondo_item_redondeado_oscuro"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imagen_libro_1"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:background="@drawable/borde_redondeado_imagen"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/libro1"
                    tools:srcCompat="@drawable/libro1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/titulo_libro_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Las Aventuras de Nico y Nacho"
                        android:textColor="#E8DFD5"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/autor_libro_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pablo Herrera R."
                        android:textColor="#DBBBA7"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/precio_libro_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="$18.99"
                        android:textColor="#FF7124"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <Button
                            android:id="@+id/boton_agregar_libro_1"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/boton_agregar_redondeado"
                            android:text="Agregar"
                            android:textColor="#202124"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="0dp" />

                        <Button
                            android:id="@+id/boton_ver_detalles_libro_1"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/boton_detalles_redondeado"
                            android:text="Detalles"
                            android:textColor="#202124"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="0dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Libro 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:background="@drawable/fondo_item_redondeado_oscuro"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imagen_libro_2"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:background="@drawable/borde_redondeado_imagen"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/libro2"
                    tools:srcCompat="@drawable/libro2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/titulo_libro_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Visions Of Tomorrow"
                        android:textColor="#E8DFD5"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/autor_libro_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Leo Waen"
                        android:textColor="#DBBBA7"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/precio_libro_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="$22.50"
                        android:textColor="#FF7124"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <Button
                            android:id="@+id/boton_agregar_libro_2"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/boton_agregar_redondeado"
                            android:text="Agregar"
                            android:textColor="#202124"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="0dp" />

                        <Button
                            android:id="@+id/boton_ver_detalles_libro_2"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/boton_detalles_redondeado"
                            android:text="Detalles"
                            android:textColor="#202124"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="0dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Libro 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:background="@drawable/fondo_item_redondeado_oscuro"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imagen_libro_3"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:background="@drawable/borde_redondeado_imagen"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/libro3"
                    tools:srcCompat="@drawable/libro3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/titulo_libro_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="El Reto"
                        android:textColor="#E8DFD5"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/autor_libro_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Maria Serrano Burgos y David Sierra Liston"
                        android:textColor="#DBBBA7"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/precio_libro_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="$19.99"
                        android:textColor="#FF7124"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <Button
                            android:id="@+id/boton_agregar_libro_3"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/boton_agregar_redondeado"
                            android:text="Agregar"
                            android:textColor="#202124"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="0dp" />

                        <Button
                            android:id="@+id/boton_ver_detalles_libro_3"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/boton_detalles_redondeado"
                            android:text="Detalles"
                            android:textColor="#202124"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="0dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Libro 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:background="@drawable/fondo_item_redondeado_oscuro"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imagen_libro_4"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:background="@drawable/borde_redondeado_imagen"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/libro4"
                    tools:srcCompat="@drawable/libro4" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/titulo_libro_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dracula"
                        android:textColor="#E8DFD5"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/autor_libro_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bram Stoker"
                        android:textColor="#DBBBA7"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/precio_libro_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="$19.99"
                        android:textColor="#FF7124"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <Button
                            android:id="@+id/boton_agregar_libro_4"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/boton_agregar_redondeado"
                            android:text="Agregar"
                            android:textColor="#202124"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="0dp" />

                        <Button
                            android:id="@+id/boton_ver_detalles_libro_4"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/boton_detalles_redondeado"
                            android:text="Detalles"
                            android:textColor="#202124"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="0dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Pie de página -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3B4883"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/boton_ver_carrito"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/boton_pie_redondeado"
            android:text="Ver Carrito"
            android:textColor="#202124"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="0dp" />

        <Button
            android:id="@+id/boton_volver_inicio"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/boton_pie_redondeado"
            android:text="Volver al Inicio"
            android:textColor="#202124"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="0dp" />

    </LinearLayout>

</LinearLayout>