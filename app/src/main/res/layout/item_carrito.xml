<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/fondo_item_redondeado_oscuro"
    android:padding="12dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="72dp"
        android:layout_height="96dp"
        android:scaleType="centerCrop"
        android:contentDescription="Portada" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="#E87722"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_button_round"
                android:text="−"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_qty"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginHorizontal="8dp" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_button_round"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_details"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_button_round"
                android:src="@drawable/icon_view"
                android:contentDescription="Ver detalles"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/btn_remove"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_icon_button_round"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Eliminar"
                app:tint="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
