<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="598dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_grid"
        android:orientation="vertical" >

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="186dp"
            android:layout_height="288dp"
            android:background="@drawable/usuario"
            android:layout_marginLeft="100dp"
            android:radius="20dp">


        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:id="@+id/BienveUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates_bold_italic"
            android:text="Benvenido ..."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:layout_marginTop="22dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates_medium"
            android:text="Disfruta de nuestro catalogo de Libros y descubre nuevas historias que te llenen de intriga o te sorprenda sus versos"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginTop="22dp"/>

        <Button
            android:id="@+id/button"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#91BAFB"
            android:padding="15dp"
            android:text="Ir a Catalogo"
            android:textSize="20dp"
            app:rippleColor="@color/black" />

    </LinearLayout>
</LinearLayout>