<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011724">

    <!-- Video de fondo -->
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/video_fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        app:resize_mode="zoom"
        app:use_controller="false" />

    <!-- Capa semitransparente sobre el video -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80011724" />

    <!-- Contenido del modal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Detalles del Libro"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/boton_cerrar_detalles"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_icon_button_round"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:contentDescription="Cerrar"
                    app:tint="#FFFFFF" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="20dp"
                android:background="#002C45" />

            <!-- Portada -->
            <ImageView
                android:id="@+id/imagen_libro_detalles"
                android:layout_width="200dp"
                android:layout_height="280dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="#002C45"
                android:scaleType="centerCrop" />

            <!-- Título / Autor / Precio -->
            <TextView
                android:id="@+id/texto_titulo_libro_detalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:lineSpacingExtra="6sp" />

            <TextView
                android:id="@+id/texto_autor_detalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Autor"
                android:textSize="16sp"
                android:textColor="#C8C8C8"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/texto_precio_detalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#C76423"
                android:gravity="center"
                android:layout_marginBottom="30dp" />

            <!-- Caja de info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/panel_translucido"
                android:padding="20dp"
                android:layout_marginBottom="30dp">

                <!-- Disponibilidad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Disponibilidad:"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/texto_disponibilidad_detalles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En Stock"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#C76423" />
                </LinearLayout>

                <!-- Páginas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Páginas:"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/texto_paginas_detalles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="128 páginas"
                        android:textSize="16sp"
                        android:textColor="#C8C8C8" />
                </LinearLayout>

                <!-- Género -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Género:"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/texto_genero_detalles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aventura Infantil"
                        android:textSize="16sp"
                        android:textColor="#C8C8C8" />
                </LinearLayout>
            </LinearLayout>

            <!-- Cantidad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="20dp" />

                <Button
                    android:id="@+id/boton_disminuir_cantidad"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_icon_button_round"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texto_cantidad_detalles"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <Button
                    android:id="@+id/boton_aumentar_cantidad"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_icon_button_round"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Acciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/boton_agregar_carrito_detalles"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/boton_pie_redondeado"
                    android:text="Agregar al Carrito"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />

                <Button
                    android:id="@+id/boton_comprar_ahora_detalles"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/boton_agregar_redondeado"
                    android:text="Comprar Ahora"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
